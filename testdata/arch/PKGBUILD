# Maintainer: Example User <user@example.org>
pkgname=hello
pkgver=2.10
pkgrel=1
pkgdesc="The GNU Hello program"
arch=('x86_64')
url="https://www.gnu.org/software/hello/"
license=('GPL3')
depends=('glibc>=2.17' 'sh')
makedepends=('gcc' 'make' 'gettext>=0.19')
checkdepends=('dejagnu' 'python')
source=("https://ftp.gnu.org/gnu/hello/hello-${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$srcdir/hello-$pkgver"
    ./configure --prefix=/usr
    make
}

check() {
    cd "$srcdir/hello-$pkgver"
    make check
}

package() {
    cd "$srcdir/hello-$pkgver"
    make DESTDIR="$pkgdir" install
}
